<body>
  <% if logged_in? %>    
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.title %></td>
            <td><%= #link_to 'Show', item %></td>
            <td><%= link_to 'Edit', edit_item_path(item) %></td>
            <td><%= link_to 'Complete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Item', new_item_path %>
  
  <% else %>
    <h2>Wow... You Need a <%= link_to "TODO LIST!", signup_path %></h2>
  <% end %>
</body>